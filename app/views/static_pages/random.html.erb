<% if @idea.present? %>
<div class="h-[1rem]">
</div>
 <h1 class=' text-3xl  text-center font-bold'>Inspire Me</h1>
<div class="rounded overflow-hidden mt-4  min-h-screen max-w-6xl mx-auto px-4">
  <div class="px-6 py-8 h-full rounded-xl shadow-md border border-gray-400 ">
    <div class="font-bold text-xl mb-2"><%= @idea.description %></div>
    <p class="text-sm text-gray-700"><%= @idea.author %></p>
    <div class="mt-4 flex gap-2 items-center">
       <%= button_to 'Delete', idea_path(@idea), method: :delete, class: ' text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2  focus:outline-none dark:focus:ring-blue-800 ', form: { data: {turbo_confirm: "Are you sure?"}} %>
      <%= link_to 'Edit', edit_idea_path(@idea), class: 'text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800' %>
    </div>
  </div>
</div>
<%end %>
<% if !@idea.present? %>
<div class="h-[1rem]">
</div>
 <h1 class=' text-3xl  text-center font-bold'>Inspire Me</h1>
<div class="rounded overflow-hidden mt-4  min-h-screen max-w-6xl mx-auto px-4">
  <div class="px-6 py-8 h-full rounded-xl shadow-md border border-gray-400 ">
    <h1>No idea present</h1>
  </div>
</div>
<% end %>